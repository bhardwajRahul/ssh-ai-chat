{
  "name": "ssh-ai-chat",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.26.1",
  "description": "AI Chat",
  "main": "./dist/index.ts",
  "module": "./dist/index.ts",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "postinstall": "(test -d .git && simple-git-hooks && npm run -s i18n:compile) || true",
    "start": "node dist/index.js",
    "prebuild": "npm run -s i18n:compile",
    "build": "tsdown",
    "build:docker": "docker compose -f docker-compose.dev.yml build",
    "dev": "tsx watch src/index.ts",
    "dev:cli": "DEV=true tsx src/cli.ts",
    "debug": "DEBUG=true DEV=true tsx src/cli.ts",
    "docker": "docker compose -f docker-compose.dev.yml up",
    "docker:down": "docker compose -f docker-compose.dev.yml down",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "logs": "tail -f logs/app.log",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "i18n:compile": "paraglide-js compile --project ./project.inlang --outdir ./i18n"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "cfonts": "^3.3.1",
    "ioredis": "^5.8.2",
    "ioredis-mock": "^8.13.1",
    "pg": "^8.16.3",
    "ssh2": "^1.17.0"
  },
  "devDependencies": {
    "@ai-sdk/mcp": "^0.0.12",
    "@ai-sdk/openai-compatible": "^1.0.29",
    "@antfu/eslint-config": "^6.7.1",
    "@eslint-react/eslint-plugin": "^2.3.13",
    "@inlang/paraglide-js": "2.0.13",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "<23",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/ssh2": "^1.15.5",
    "ai": "^5.0.116",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "es-toolkit": "^1.43.0",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "ink": "^6.5.1",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-select-input": "^6.2.0",
    "ink-text-input": "^6.0.0",
    "lint-staged": "^16.2.7",
    "marked-terminal": "^7.3.0",
    "p-timeout": "^7.0.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "react": "^19.2.3",
    "react-devtools-core": "^6.1.5",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.18.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "ufo": "^1.6.1",
    "uuidv7": "^1.1.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
